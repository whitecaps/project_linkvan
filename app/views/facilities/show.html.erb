<h2>Services</h2>
<div class="inset" id="services">
  <p><%=display_services(@facility.services) %></p>
  <% @facility.services.split.each do |service|
      id = service + "Note"
      note = ""
      case service
          when "Shelter"
              content = content_tag(:i, nil, class: "icon-sleepshelter_linkvan shelter-colour-index")
              note += @facility.shelter_note ? @facility.shelter_note : ""
          when "Food"
              content = content_tag(:i, nil, class: "glyphicon glyphicon-cutlery food-colour-index")
              note += @facility.food_note ? @facility.food_note : ""
          when "Medical"
              content = content_tag(:i, nil, class: "icon-Medical_linkvan medical-colour-index")
              note += @facility.medical_note ? @facility.medical_note : ""
          when "Hygiene"
              content = content_tag(:i, nil, class: "icon-hygiene_linkvan hygiene-colour-index")
              note += @facility.hygiene_note ? @facility.hygiene_note : ""
          when "Technology"
              content = content_tag(:i, nil, class: "icon-technology_linkvan technology-colour-index")
              note += @facility.technology_note ? @facility.technology_note : ""
          when "Legal"
              content = content_tag(:i, nil, class: "icon-Advocacy_linkvan legal-colour-index")
              note += @facility.legal_note ? @facility.legal_note : ""
          when "Learning"
              content = content_tag(:i, nil, class: "icon-learning_linkvan")
              note += @facility.learning_note ? @facility.learning_note : ""
          #else add error case?

      end #ends case
      content = content_tag(:h3, content + service)
      content += content_tag(:p, note)
      content.html_safe
      %>
    <%= content_tag(:div, content, class: "serviceNote inset", id: id) %>
  <% end %>
</div>

